<h1>Listing users</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Login</th>
    <th>Email</th>
    <th>Crypted password</th>
    <th>Salt</th>
    <th>Remember token</th>
    <th>Remember token expires at</th>
    <th>Activation code</th>
    <th>Activated at</th>
    <th>Password reset code</th>
    <th>Enabled</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%=h user.name %></td>
    <td><%=h user.login %></td>
    <td><%=h user.email %></td>
    <td><%=h user.crypted_password %></td>
    <td><%=h user.salt %></td>
    <td><%=h user.remember_token %></td>
    <td><%=h user.remember_token_expires_at %></td>
    <td><%=h user.activation_code %></td>
    <td><%=h user.activated_at %></td>
    <td><%=h user.password_reset_code %></td>
    <td><%=h user.enabled %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New user', new_user_path %>
