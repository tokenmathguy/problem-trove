<h1>Listing labs</h1>

<table>
  <tr>
    <th>Offering</th>
    <th>User</th>
    <th>Title</th>
    <th>Week</th>
  </tr>

<% @labs.each do |lab| %>
  <tr>
    <td><%=h lab.offering.display_name %></td>
    <td><%=h lab.user.name %></td>
    <td><%=h lab.title %></td>
    <td><%=h lab.week %></td>
    <td><%= link_to 'Show', lab %></td>
    <td><%= link_to 'Edit', edit_lab_path(lab) %></td>
    <td><%= link_to 'Destroy', lab, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

